---
import { createClient } from '@supabase/supabase-js'
import { Astro } from 'astro'

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_DATABASE_URL
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY

if (!supabaseUrl || !supabaseKey) {
  throw new Error('PUBLIC_SUPABASE_DATABASE_URL or PUBLIC_SUPABASE_ANON_KEY is missing')
}

const supabase = createClient(supabaseUrl, supabaseKey)

const { params } = Astro.request
const id = params.id

const { data: profissional, error } = await supabase
  .from('profissionais')
  .select('*')
  .eq('id', id)
  .single()

if (!profissional || error) {
  throw new Error('Profissional não encontrado')
}
---
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{profissional.nome} | fazumbes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/preline@2.0.3/dist/preline.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/preline@2.0.3/dist/preline.min.js" defer></script>
  </head>
  <body class="bg-white text-gray-800">
    <header class="shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">
          <a href="/">fazum<strong>bes</strong></a>
        </h1>
        <nav class="space-x-6">
          <a href="/" class="text-gray-700 hover:text-black font-medium">Home</a>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-4 py-10">
      <div class="flex flex-col md:flex-row gap-8">
        <img src={profissional.foto_url} alt={profissional.nome} class="w-full md:w-1/2 h-64 object-cover rounded-lg" />
        <div class="flex-1 space-y-3">
          <h2 class="text-3xl font-bold">{profissional.nome}</h2>
          <p class="text-gray-600">{profissional.cidade}, {profissional.estado}</p>
          <p class="text-sm text-gray-700">{profissional.bio}</p>
          <p><strong>Especialidades:</strong> {profissional.especialidades?.join(', ') || ''}</p>
          <a
            href={`https://wa.me/${profissional.whatsapp}`}
            target="_blank"
            class="inline-block mt-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
          >
            Falar no WhatsApp
          </a>
        </div>
      </div>

      {profissional.latitude && profissional.longitude && (
        <div class="mt-8">
          <h3 class="text-lg font-semibold mb-2">Localização</h3>
          <iframe
            src={`https://www.google.com/maps?q=${profissional.latitude},${profissional.longitude}&hl=pt-br&z=15&output=embed`}
            class="w-full h-64 rounded-lg"
            loading="lazy"
          ></iframe>
        </div>
      )}
    </main>

    <footer class="bg-gray-100 border-t mt-16">
      <div class="max-w-7xl mx-auto px-4 py-8 text-sm text-gray-500 flex justify-between flex-col md:flex-row gap-4">
        <div>&copy; {new Date().getFullYear()} fazum<strong>bes</strong>. Todos os direitos reservados.</div>
        <div class="space-x-4">
          <a href="/politica-de-privacidade" class="hover:underline">Política de Privacidade</a>
          <a href="/termos-de-uso" class="hover:underline">Termos de Uso</a>
        </div>
      </div>
    </footer>
  </body>
</html>
