---
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_DATABASE_URL
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY

if (!supabaseUrl || !supabaseKey) {
  throw new Error('PUBLIC_SUPABASE_DATABASE_URL or PUBLIC_SUPABASE_ANON_KEY is missing')
}

import { createClient } from '@supabase/supabase-js'
const supabase = createClient(supabaseUrl, supabaseKey)

const { data: profissionais } = await supabase
  .from('profissionais')
  .select('*')
  .eq('plano_ativo', true)
  .order('nome', { ascending: true })
---
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Marketplace de Profissionais</title>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-10">
      <h1 class="text-3xl font-bold mb-6 text-gray-800">Encontre um profissional</h1>

      <input
        type="text"
        id="busca"
        placeholder="Buscar por nome, cidade ou especialidade..."
        class="w-full p-3 rounded-lg border border-gray-300 mb-8"
        oninput="filtrar()"
      />

      <div id="cards" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {(profissionais || []).map((p) => (
          <div
            class="bg-white shadow rounded-lg p-4 space-y-2 card"
            data-nome={p.nome}
            data-cidade={p.cidade}
            data-especialidades={`${p.especialidades?.join(' ') || ''}`}
          >
            <img src={p.foto_url} alt={p.nome} class="w-full h-48 object-cover rounded-lg" />
            <h2 class="text-xl font-semibold">{p.nome}</h2>
            <p class="text-sm text-gray-500">{p.cidade}, {p.estado}</p>
            <p class="text-sm text-gray-600">{p.bio}</p>
            <p class="text-sm mt-2">
              <strong>Especialidades:</strong> {p.especialidades?.join(', ') || ''}
            </p>
            <a
              href={`https://wa.me/${p.whatsapp}`}
              target="_blank"
              class="inline-block mt-2 text-green-600 font-semibold"
            >
              Falar no WhatsApp
            </a>
            {p.latitude && p.longitude && (
              <iframe
                src={`https://www.google.com/maps?q=${p.latitude},${p.longitude}&hl=pt-br&z=15&output=embed`}
                class="w-full h-48 mt-3 rounded-lg"
                loading="lazy"
              ></iframe>
            )}
          </div>
        ))}
      </div>
    </div>

    <script>
      function filtrar() {
        const input = document.getElementById('busca')
        const termo = input?.value.toLowerCase() || ''

        const cards = document.querySelectorAll('.card')
        cards.forEach((card) => {
          const el = card
          const nome = el.dataset.nome?.toLowerCase() || ''
          const cidade = el.dataset.cidade?.toLowerCase() || ''
          const especialidades = el.dataset.especialidades?.toLowerCase() || ''
          const texto = nome + cidade + especialidades
          el.style.display = texto.includes(termo) ? '' : 'none'
        })
      }
    </script>
  </body>
</html>
